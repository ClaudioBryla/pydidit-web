<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>pydidit.</title>
    <!-- Bootstrap -->
    <link href="${request.static_url('pydiditweb:static/css/bootstrap.min.css')}" rel="stylesheet">
    <!-- Stylesheet of Awesome -->
    <link href="${request.static_url('pydiditweb:static/css/style.css')}" rel="stylesheet">
    <!-- jQuery UI stylesheet -->
    <link href="${request.static_url('pydiditweb:static/css/jquery-ui.min.css')}" rel="stylesheet">
  </head>
  <body>
    <div id="pydidit" class="container">
      <ul class="nav nav-tabs" role="tablist">
        <li class="active"><a href="#todo-tab" data-toggle="tab">Todos</a></li>
        <li><a href="#project-tab" data-toggle="tab">Projects</a></li>
        <li><a href="#tag-tab" data-toggle="tab">Tags</a></li>
      </ul>
      <div class="tab-content">
        <div id="todo-tab" class="tab-pane active">
        </div>
        <div id="project-tab" class="tab-pane">
        </div>
        <div id="tag-tab" class="tab-pane">
        </div>
      </div>
    </div>
    <script type="text/template" id="tab-template">
      <div>
        <h1><%- tabTitle %></h1>
        <ul class="<%- ulClass %>">
        </ul>
        <div id="<%- createDivId %>" role="form" class="well form-group">
          <button type="button" class="btn btn-default" id="create">Create!</button>
        </div>
      </div>
    </script>
    <script type="text/template" id="todo-create-template">
      <label for="description" class="control-label">Create Todo:</label>
      <input type="text" class="form-control" id="description" name="description" />
    </script>
    <script type="text/template" id="project-create-template">
      <label for="description" class="control-label">Create Project:</label>
      <input type="text" class="form-control" id="description" name="description" />
    </script>
    <script type="text/template" id="tag-create-template">
      <label for="tag-name" class="control-label">Create Tag:</label>
      <input type="text" class="form-control" id="tag-name" name="tag-name" />
    </script>
    <script type="text/template" id="todo-template">
      <%- description %>
      <div class="btn-group">
      <button type="button" class="btn btn-xs dropdown-toggle" data-toggle="dropdown">
        <span class="caret" />
      </button>
      <ul class="dropdown-menu dropdown-menu-right" role="menu">
        <li>Created at <%- created_at_formatted %></li>
        <li>Display position <%- display_position %></li>
      </ul>
      </div>
      <button type="button" class="btn btn-success btn-xs complete-todo"><span class="glyphicon glyphicon-ok" /></button>
      <button type="button" class="btn btn-warning btn-xs edit-todo"><span class="glyphicon glyphicon-pencil" /></button>
      <button type="button" class="btn btn-danger btn-xs remove-todo"><span class="glyphicon glyphicon-remove" /></button>
    </script>
    <script type="text/template" id="project-template">
      <%- description %>
      <div class="btn-group">
      <button type="button" class="btn btn-xs dropdown-toggle" data-toggle="dropdown">
        <span class="caret" />
      </button>
      <ul class="dropdown-menu dropdown-menu-right" role="menu">
        <li>Created at <%- created_at_formatted %></li>
        <li>Display position <%- display_position %></li>
      </ul>
      </div>
      <button type="button" class="btn btn-success btn-xs complete-project"><span class="glyphicon glyphicon-ok" /></button>
      <button type="button" class="btn btn-warning btn-xs edit-project"><span class="glyphicon glyphicon-pencil" /></button>
      <button type="button" class="btn btn-danger btn-xs remove-project"><span class="glyphicon glyphicon-remove" /></button>
    </script>
    <script type="text/template" id="tag-template">
      <%- name %>
      <div class="btn-group">
      <button type="button" class="btn btn-xs dropdown-toggle" data-toggle="dropdown">
        <span class="caret" />
      </button>
      <ul class="dropdown-menu dropdown-menu-right" role="menu">
        <li>Created at <%- created_at_formatted %></li>
      </ul>
      </div>
      <button type="button" class="btn btn-warning btn-xs edit-tag"><span class="glyphicon glyphicon-pencil" /></button>
      <button type="button" class="btn btn-danger btn-xs remove-tag"><span class="glyphicon glyphicon-remove" /></button>
    </script>
    <script type="text/template" id="edit-template">
      <div role="form" class="well form-group">
        <label for="edit-<%- primaryDescriptor %>" class="control-label">Edit <%- type %>:</label>
        <input type="text" class="form-control" id="edit-<%- primaryDescriptor %>" name="edit-<%- primaryDescriptor %>" value="<%- initialValue %>" />
        <button type="button" class="btn btn-default save">Save</button>
      </div>
    </script>
    <script data-main="${request.static_url('pydiditweb:static/js/pydidit.js')}" src="${request.static_url('pydiditweb:static/js/require.js')}"></script>
    <script>
      require.config({
        paths: {
          'jquery': 'jquery-2.1.1.min',
          'bootstrap': 'bootstrap.min',
          'jqueryui': 'jquery-ui-1.11.2/jquery-ui.min'
        },
        shim: {
          'bootstrap': {
            deps: ['jquery']
          },
          'underscore-min': {
            exports: '_'
          },
          'backbone-min': {
            deps: ['jquery', 'underscore-min'],
            exports: 'Backbone'
          },
          'jqueryui': {
            deps: ['jquery'],
          }
        }
      });
    </script>
  </body>
</html>
